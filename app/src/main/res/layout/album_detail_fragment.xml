<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="album" type="com.uniandes.vinilosapplication.data.model.AlbumModel"/>
    </data>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_logo_vinilos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_vinilos"
            />

        <TextView
            android:id="@+id/albumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="270dp"
            android:text="@{album.name}"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:letterSpacing="0.3"
           />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/albumname"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-302dp"
            android:layout_marginEnd="16dp"
            tools:context=".ui.fragments.AlbumDetailFragment">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragments_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/track_item" />

        </FrameLayout>
    </RelativeLayout>


</layout>